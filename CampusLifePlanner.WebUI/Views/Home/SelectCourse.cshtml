@model CampusLifePlanner.WebUI.ViewModels.CoursesViewModel
@{
    TempData["title"] = "Selecione seu curso";
}

<style>
    .fade-in {
        animation: fadeIn 1s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-50px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="d-flex justify-content-center align-items-center my-5 fade-in" id="myModal">
    <div class="modal-container rounded-3 border col-8 p-4">
        <div class="modal-header border-bottom-0">
            <h1 class="modal-title fs-3 mb-3 fade-in">Bem-vindo ao EduPlaner</h1>
        </div>
        <div class="modal-body py-2">
            <p class="f6 fade-in">
                Para ficar por dentro dos eventos e atividades, por favor, escolha o curso
                no qual você está atualmente matriculado. Isso permitirá que você acompanhe todas
                as informações relevantes e participe das atividades programadas. Estamos aqui para
                garantir que você esteja sempre bem informado e engajado em seu curso.
            </p>
            <div class="mt-3 fade-in">
                <select class="form-select form-select-lg mb-3" asp-items="@Model.Courses" aria-label="Escolha seu curso">
                    <option selected>Escolha seu curso</option>
                </select>
            </div>
        </div>
        <div class="modal-footer m-0 fade-in">
            <div>
                <button class="btn btn-outline-success scalable-button">
                    Selecionar Curso
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script>
        $(document).ready(function () {
            var modal = $("#myModal");
            modal.addClass("fade-in");
        });
    </script>

}

                    