@model CampusLifePlanner.WebUI.ViewModels.CoursesViewModel
@using RS = CampusLifePlanner.Infra.IoC.Resources.Common;
@{
    TempData["title"] = RS.GENERAL_PAGE_LBL_CHOOSE_COURSE;
}

<style>
    .fade-in {
        animation: fadeIn 1s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-50px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="d-flex justify-content-center align-items-center my-5 fade-in" id="myModal">
    <div class="modal-container rounded-3 border col-8 p-4">
        <div class="modal-header border-bottom-0">
            <h1 class="modal-title fs-3 mb-3 fade-in">@RS.GENERAL_PAGE_WELCOME_EDU_PLANER</h1>
        </div>
        <div class="modal-body py-2">
            <p class="f6 fade-in">
                @RS.GENERAL_MSG_HOME_ENROLLMENT
            </p>
            <div class="mt-3 fade-in">
                <select id="courseSelect" class="form-select form-select-lg mb-3" asp-items="@Model.Courses" aria-label="@RS.GENERAL_PAGE_LBL_CHOOSE_COURSE">
                    <option selected>@RS.GENERAL_PAGE_LBL_CHOOSE_COURSE</option>
                </select>
            </div>
        </div>
        <div class="modal-footer m-0 fade-in">
            <div>
                <button id="enrollButton" class="btn btn-outline-success scalable-button" disabled>
                    @RS.GENERAL_PAGE_BTN_ENROLLMENT
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script>
        $(document).ready(function () {
            var modal = $("#myModal");
            modal.addClass("fade-in");
        });

        $(document).ready(function () {
            $('#courseSelect').change(function () {
                const selectedText = $("#courseSelect option:selected").text();
                if (selectedText === "Escolha seu curso") {
                    $('#enrollButton').prop('disabled', true);
                } else {
                    $('#enrollButton').prop('disabled', false);
                }
            });
        });
    </script>

}

                    