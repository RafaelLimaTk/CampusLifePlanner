@model IEnumerable<CampusLifePlanner.Application.DTOs.EventDto>

@{
    ViewData["Title"] = "Dashboard | EduPlaner";
}

<style>
    .link-list-today {
        text-decoration: none;
    }

    .collapse-show {
        background: #f6f7fb;
        padding: 20px
    }

    .icon-container {
        transition: transform 0.3s ease;
        display: inline-block;
    }

    .rotate-180 {
        transform: rotate(180deg);
        transition: transform 0.4s ease;
        display: inline-block;
    }

    .button-info{
        cursor: pointer;
    }
</style>

<div class="bg-body-tertiary bg-primary rounded p-4">
    <h4 class="text-white">
        Eventos
    </h4>
</div>

<div class="mt-4">
    <h5 class="m-0 pb-2">
        <a class="text-dark link-list-today" data-bs-toggle="collapse" href="#todayTasks" role="button" aria-expanded="false" aria-controls="todayTasks">
            <span class="icon-container">
                <i class="bi bi-chevron-down fs-6"></i>
            </span>
            Hoje
        </a>
    </h5>
    <div class="collapse collapse-show rounded show" id="todayTasks">
        @if (Model != null && Model.Any())
        {
            foreach (var evento in Model)
            {
                <div class="row p-1">
                    <div class="col-10 justify-content-sm-between">
                        <div class="col-sm-6 mb-2 mb-sm-0">
                            <span>@evento.Title</span>
                        </div>
                    </div>
                    <div class="col-2">
                        <span class="me-2">
                            <i class="bi bi-calendar-date text-danger"></i>
                            Hoje às @evento.StartDate.ToString("HH:mm")
                        </span>
                        <span class="button-info">
                            <i class="bi bi-info-circle text-primary" id="info"></i>
                        </span>
                    </div>
                </div>
            }
        }
        else
        {
            <h4>Nenhum evento encontrado, aproveite seu dia!</h4>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelector(".link-list-today").addEventListener("click", function (e) {
                document.querySelector(".icon-container").classList.toggle("rotate-180");
            });
        });
    </script>
}