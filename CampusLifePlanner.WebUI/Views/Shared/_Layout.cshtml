<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CampusLifePlanner.WebUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CampusLifePlanner.WebUI.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EduPlaner</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li>
                                <partial name="_MenuLinks" />
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="dropdown">
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CampusLifePlanner.WebUI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/microsoft/signalr/dist/browser/signalr.min.js"></script>

    <script src='~/lib/fullcalendar/index.global.min.js'></script>
    <script src="~/lib/fullcalendar/moment/index.global.min.js"></script>
    <script src="~/lib/fullcalendar/moment-timezone/index.global.min.js"></script>
    <script src="~/lib/fullcalendar/timegrid/index.global.min.js"></script>
    <script src="~/lib/fullcalendar/bootstrap5/index.global.min.js"></script>
    <script src="~/lib/fullcalendar/core/locales/pt-br.global.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/exceptionhandlerextention/exceptionhandlererror.js" data-parametro="@TempData["error"]"></script>
    <script src="~/js/exceptionhandlerextention/exceptionhandlerinfo.js" data-parametro="@TempData["info"]"></script>
    <script src="~/js/exceptionhandlerextention/exceptionhandlersuccess.js" data-parametro="@TempData["success"]"></script>
    <script src="~/js/exceptionhandlerextention/exceptionhandlerwarning.js" data-parametro="@TempData["warning"]"></script>
    <script src="~/js/exceptionhandlerextention/exceptionhandlergeneral.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
